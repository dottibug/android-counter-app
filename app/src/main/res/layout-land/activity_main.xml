<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainImageViewCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="96dp"
                android:contentDescription="@string/counterIconDescription"
                app:srcCompat="@drawable/ic_counter" />

            <TextView
                android:id="@+id/mainTextViewNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="@string/placeholderNumber"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="84sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="96dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mainEditTextNumberInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:autofillHints="no"
                    android:ems="10"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="@string/numberHint"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/mainButtonSubmit"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:height="48dp"
                    android:backgroundTint="@color/green"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/buttonText"
                    android:textAllCaps="true"
                    android:textColor="@color/alabaster"
                    android:textSize="14sp"
                    app:cornerRadius="6dp" />

            </LinearLayout>

            <Button
                android:id="@+id/mainButtonRandomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/randomButtonText"
                android:textColor="@color/alabaster"
                android:textColorLink="@color/alabaster"
                android:textSize="16sp"
                app:cornerRadius="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="96dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainButtonDec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amethyst"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="@string/buttonDecrease"
                    android:textAlignment="center"
                    android:textColor="@color/alabaster"
                    android:textSize="24sp"
                    app:cornerRadius="6dp" />

                <EditText
                    android:id="@+id/mainEditTextInterval"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="2"
                    android:autofillHints="no"
                    android:ems="10"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="@string/placeholderInterval"
                    android:inputType="numberSigned"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textColorHint="@color/green"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/mainButtonInc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/amethyst"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="@string/buttonIncrease"
                    android:textAlignment="center"
                    android:textColor="@color/alabaster"
                    android:textSize="24sp"
                    app:cornerRadius="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mainTextViewSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/placeholderSummary"
                android:textAlignment="center"
                android:textColor="@color/greenLight"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>